{
    "editor.tabSize": 2,
    "eslint.validate": [
        "html",
        "javascript",
        "javascriptreact"
    ],
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "pylint.enabled": true,
    "pylint.args": [
        "--max-line-length=88"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    }
}